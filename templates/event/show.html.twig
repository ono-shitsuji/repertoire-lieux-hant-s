{% extends 'base.html.twig' %}

{% block body %}
    <h1>Evenements :</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ event.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ event.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ event.description }}</td>
            </tr>
            <tr>
                <th>Creation_date</th>
                <td>{{ event.creationDate ? event.creationDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Modification_date</th>
                <td>{{ event.modificationDate ? event.modificationDate|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    

    <a href="{{ path('app_event_edit', {'id': event.id}) }}">Modifier</a>

    <a href="{{ path('app_event_index') }}">Retour</a>

    {{ include('event/_delete_form.html.twig') }}
{% endblock %}
