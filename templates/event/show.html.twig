{% extends 'base.html.twig' %}

{% block title %}Event{% endblock %}

{% block body %}
    <h1>Event</h1>
                <th>Id</th>
                <td>{{ event.id }}</td>

                <th>Title</th>
                <td>{{ event.title }}</td>
                <th>Description</th>
                <td>{{ event.description }}</td>
    {% if event.modificationDate %}
        <p>Dernière modification le :{{ event.modificationDate ? event.modificationDate|date('Y-m-d') : '' }}</p>
    {% else %}
        <p>Ajouté le : {{ event.creationDate ? event.creationDate|date('Y-m-d') : '' }} </p>
    {% endif %}

    <a href="{{ path('app_event_index') }}">Retour</a>

    <a href="{{ path('app_event_edit', {'id': event.id}) }}">Modifier</a>

    {{ include('event/_delete_form.html.twig') }}
{% endblock %}
