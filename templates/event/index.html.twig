{% extends 'base.html.twig' %}

{% block body %}
    <h1>Evenements :</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Date de Création</th>
                <th>Date de Modification</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for event in events %}
            <tr>
                <td>{{ event.id }}</td>
                <td>{{ event.title }}</td>
                <td>{{ event.description }}</td>
                <td>{{ event.creationDate ? event.creationDate|date('Y-m-d') : '' }}</td>
                <td>{{ event.modificationDate ? event.modificationDate|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_event_show', {'id': event.id}) }}">Afficher</a>
                    <a href="{{ path('app_event_edit', {'id': event.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucun Evenement</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_event_new') }}">Ajouter un Evènement</a>
{% endblock %}
